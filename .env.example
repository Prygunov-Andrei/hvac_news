# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,*.ngrok.io,*.ngrok-free.app

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=hvac_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Translation API (OpenAI)
TRANSLATION_PROVIDER=openai
TRANSLATION_API_KEY=your-openai-api-key-here
TRANSLATION_MODEL=gpt-4o-mini
TRANSLATION_ENABLED=True

# News Discovery API Keys
GEMINI_API_KEY=your-gemini-api-key-here
XAI_API_KEY=your-xai-api-key-here

# News Discovery Configuration
NEWS_DISCOVERY_OPENAI_MODEL=gpt-5.2
NEWS_DISCOVERY_GROK_MODEL=grok-4-1-fast
NEWS_DISCOVERY_USE_GROK=True
NEWS_DISCOVERY_USE_OPENAI_FALLBACK=True
NEWS_DISCOVERY_TIMEOUT=120

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@hvacnews.com
ADMIN_EMAIL=admin@hvacnews.com

# CAPTCHA Configuration
CAPTCHA_TYPE=hcaptcha
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
